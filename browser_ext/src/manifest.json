{
  "manifest_version": 2,
  "name": "dlm",
  "description": "Adds current tab to dlm",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "contextMenus", "tabs"],
  "background": {
    "scripts": ["polyfill.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["polyfill.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "Add to dlm",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    },
    "query-selector": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open query selector for finding links"
    }
  },
  "applications": {
    "gecko": {
      "id": "dlm@example.com",
      "strict_min_version": "57.0"
    }
  }
}
