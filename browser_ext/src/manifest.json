{
  "manifest_version": 2,
  "name": "dlm",
  "description": "Adds current tab to dlm",
  "version": "0.1.1",
  "permissions": ["activeTab", "storage", "contextMenus", "tabs"],
  "background": {
    "scripts": ["polyfill.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["polyfill.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "Add to dlm",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+D",
        "mac": "Command+Shift+Y"
      }
    },
    "query-selector": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+Q"
      },
      "description": "Open query selector for finding links"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dlm@brettchalupa.com",
      "strict_min_version": "79.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
